# Production Environment Configuration
# DO NOT commit this file with real values - use environment variables or secrets management

# Application
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database
MONGODB_URI=mongodb://username:password@host:port/database
MONGODB_OPTIONS=retryWrites=true&w=majority&ssl=true

# JWT Configuration - MUST be changed from defaults
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_SECRET_AT_LEAST_32_CHARACTERS_LONG
JWT_REFRESH_SECRET=CHANGE_THIS_TO_A_DIFFERENT_SECURE_SECRET_AT_LEAST_32_CHARACTERS_LONG
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# GitHub OAuth
GITHUB_CLIENT_ID=your_production_github_client_id
GITHUB_CLIENT_SECRET=your_production_github_client_secret
GITHUB_CALLBACK_URL=https://api.gh-gold-mine.dev/api/auth/github/callback

# CORS Configuration
CORS_ORIGIN=https://gh-gold-mine.dev,https://www.gh-gold-mine.dev

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=CHANGE_THIS_TO_A_SECURE_SESSION_SECRET
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis (for caching and rate limiting)
REDIS_URL=redis://username:password@host:port
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/gh-gold-mine/app.log

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=GH-Gold-Mine-Production

# Email (for notifications)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@gh-gold-mine.dev

# File Storage (if using cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=gh-gold-mine-production

# Performance
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
CLUSTER_WORKERS=auto

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_COMPRESSION=true

# Health Checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/gh-gold-mine.crt
SSL_KEY_PATH=/etc/ssl/private/gh-gold-mine.key

# Development Authentication (NEVER enable in production)
# ALLOW_DEV_BYPASS=false
# BYPASS_AUTH=false
