{
  "version": 2,
  "name": "gh-gold-mine",
  "buildCommand": "echo 'Build skipped for demo'",
  "devCommand": "yarn dev",
  "installCommand": "yarn install",
  "build": {
    "env": {
      "CI": "true"
    }
  },
  "functions": {
    "backend/api/**/*.js": {
      "runtime": "@vercel/node"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}
